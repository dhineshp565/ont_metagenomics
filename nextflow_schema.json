{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/ont_metagenomics/master/nextflow_schema.json",
    "title": "ont_metagenomics pipeline parameters",
    "description": "Pipeline for analysis of Oxford Nanopore metgenomics data ",
    "type": "object",
    "definitions": {
        "input_output_options": {
            "title": "Input/output options",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "description": "Define where the pipeline should find input data and save output data.",
            "required": [
                "input",
                "kraken_db",
                "blastdb_path",
                "blastdb_name"
            ],
            "properties": {
                "input": {
                    "type": "string",
                    "format": "directory-path",
                    "exists": true,
                    "mimetype": "text/csv",
                    "description": "Path to directory containing sub-dir with fastq files",
                    "fa_icon": "fas fa-folder-plus",
                    "default": "filepath"
                },
                "kraken_db": {
                    "type": "string",
                    "format": "directory-path",
                    "fa_icon": "fas fa-database",
                    "description": "Path to kraken2 database",
                    "default": "/data/referenceDB/kraken/k2_pluspf_08gb_20230605"
                },
                 "blastdb_path": {
                    "type": "string",
                    "default": "/data/referenceDB/blast/microbe_db",
                    "format": "directory-path",
                    "fa_icon": "fas fa-database",
                    "description": "Path to blast database"
                },
                 "blastdb_name": {
                    "type": "string",
                    "default": "microbe_db",
                    "description": "Name of the blast database"
                },
                "out_dir": {
                    "type": "string",
                    "default": "output",
                    "description": "Path to output files",
                    "format": "directory-path",
                    "fa_icon": "fas fa-folder-open"
                }
            }
        },
        "optional": {
            "title": "Optional",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                  
                 "qscore": {
                  "type": "integer",
                  "default": 10,
                  "description": "Raw read quality score (Phred quality score). Only the reads equal to or above quality score will be used for analysis",
                  "enum": [10, 12, 15, 20, 25,30,35,40]
                },
               
                "trim_barcodes": {
                    "type": "boolean",
                    "description": "Select Yes to trim barcodes and adpter sequences",
                    "default": false,
                    "enum": [ true,
                        false
                    ]
                },
                "dehost": {
                    "type": "boolean",
                    "description": "Remove host (bovine) DNA reads from analysis",
                    "default": true,
                    "enum": [true,
                        false
                    ]
    
                },
                "host_db": {
                    "type": ["string", "null"],
                    "default": "/data/referenceDB/kraken/k2_bos_taurus_db_12012026",
                    "description": "Path to kraken db with host genome for dehosting",
                    "format": "directory-path",
                    "fa_icon": "fas fa-database"
                }
                    
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input_output_options"
        },
        {
            "$ref": "#/definitions/optional"
        }
    ]
}
